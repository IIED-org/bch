{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}


{%
  set primary = [
    'h-12 px-6 py-2 mb-6 mr-2 transition-colors duration-150 rounded-full shadow-sm',
    'hover:shadow-none bg-bc-coral-300 hover:bg-bc-yellow-500 focus:shadow-outline',
    'text-lg font-semibold text-gray-800 hover:no-underline hover:text-gray-900 cursor-pointer',
  ]
%}

{%
  set secondary = [
    'h-12 px-6 py-2 mb-6 mr-2 transition duration-150 rounded-full shadow-sm',
    'hover:shadow-none bg-white hover:bg-bc-yellow-500 focus:shadow-outline',
    'border border-bc-coral-500', 
    'text-lg font-semibold text-gray-800',
    'hover:no-underline hover:text-gray-900 cursor-pointer hover:ring-bc-coral-500 hover:ring-1',
  ]
%}


{% if attributes.hasClass('webform-button--draft') or attributes.hasClass('webform-button--previous') or attributes.hasClass('webform-wizard-pages-link') %}
    <input{{ attributes.addClass(secondary) }} />{{ children }}
  {% else %}  
    <input{{ attributes.addClass(primary) }} />{{ children }}
{% endif %}
